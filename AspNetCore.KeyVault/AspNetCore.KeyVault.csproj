<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageVersion>1.0.6</PackageVersion>
    <Authors>Neville Nazerane</Authors>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>
      Extensions to directly add azure keyvault as configuration to an aspnetcore web application
    </Description>
    <PackageReleaseNotes>
      - Updated package meta
    </PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/neville-nazerane/AspNetCore.KeyVault</PackageProjectUrl>
    <PackageTags>azure key vault keyvault aspnetcore netcore iconfiguration configuration</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Hosting" Version="2.1.1" />
    <PackageReference Include="Microsoft.Azure.KeyVault" Version="3.0.2" />
    <PackageReference Include="Microsoft.Azure.Services.AppAuthentication" Version="1.0.3" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="2.1.1" />
    <PackageReference Include="Microsoft.Extensions.Configuration.AzureKeyVault" Version="2.1.1" />
  </ItemGroup>

</Project>
